<h1>Meeting</h1>
<h2>Team: <%= @meeting.team.name %></h2>
<h3>Date: <%= format_date(@meeting.time) %></h3>
<h3>Time: <%= format_time(@meeting.time) %></h3>
<% if @meeting.space != nil %>
<h3>Location: <%= link_to @meeting.space.name, space_path(@meeting.space) %></h3>
<%else%>
<h3>Location: TBD. <%= link_to "Find an Available Space", spaces_path%></h3>
<%end%>
<h3>Meeting Notes:</h3>
<% @meeting.notes.each do |n| %>
  <h4><%=n.author.name%>: <%=n.content%> | <% if n.author == current_user %> <%=link_to "Edit this Note",  edit_team_meeting_note_path(@meeting.team, @meeting, n)%> | <%=link_to "Delete this Note", note_path(n), method: :delete%> <%end%></h4>
<%end%>
<h3><%=link_to "Return to Team Page", team_path(@meeting.team)%></h3>
<h3><%=link_to "Add a Note", new_team_meeting_note_path(@meeting.team, @meeting)%></h3>
<h3><%=link_to "Cancel this Meeting", team_meeting_path(@meeting.team, @meeting), method: :delete %> </h3>
